{
  "manifest_version": 3,
  "name": "PP-CANDY",
  "version": "1.0",
  "description": "Navigate tabs, paste current date and time, go to the first page, and store selected text using keyboard shortcuts and context menu.",
  "permissions": [
    "activeTab",
    "clipboardRead",
    "clipboardWrite",
    "scripting",
    "storage",
    "tabs",
    "contextMenus"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*",
        "chrome-extension://*/options/*"
      ],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background/background.js"
  },
  "action": {
    "default_popup": "popup/popup.html"
  },
  "commands": {
    "move-tab-left": {
      "suggested_key": {
        "default": "Ctrl+Left"
      },
      "description": "Move to the previous tab"
    },
    "move-tab-right": {
      "suggested_key": {
        "default": "Ctrl+Right"
      },
      "description": "Move to the next tab"
    },
    "paste-date-time": {
      "suggested_key": {
        "default": "Ctrl+Shift+D"
      },
      "description": "Paste the current date and time"
    },
    "go-to-first-page": {
      "suggested_key": {
        "default": "Ctrl+Shift+F"
      },
      "description": "Go to the first page in the tab history"
    }
  },
  "author": "Your Name",
  "options_ui": {
    "page": "options/storeSelectedText.html",
    "open_in_tab": true
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
