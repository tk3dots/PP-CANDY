{
  "manifest_version": 3,
  "name": "PP-CANDY",
  "version": "1.0",
  "description": "PP-CANDY",
  "permissions": [
    "activeTab",
    "clipboardRead",
    "clipboardWrite",
    "scripting",
    "storage",
    "tabs",
    "contextMenus",
    "commands"
  ],
  "background": {
    "service_worker": "background/background.js"
  },
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "commands": {
    "move-tab-left": {
      "suggested_key": {
        "default": "Ctrl+Shift+Left"
      },
      "description": "Move to the previous tab"
    },
    "move-tab-right": {
      "suggested_key": {
        "default": "Ctrl+Shift+Right"
      },
      "description": "Move to the next tab"
    },
    "paste-date-time": {
      "suggested_key": {
        "default": "Ctrl+Shift+D"
      },
      "description": "Paste the current date and time"
    },
    "go-to-first-page": {
      "suggested_key": {
        "default": "Ctrl+Shift+F"
      },
      "description": "Go to the first page in the tab history"
    }
  },
  "author": "Your Name",
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content.js"]
    }
  ]
}
